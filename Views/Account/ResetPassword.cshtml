@model ResetPassword

@{
    ViewData["Title"] = "Redefinir senha";
}

<div class="container">
    <div class="mt-5 px-4 pt-5 pb-3 text-center">
        <h1 class="display-6 fw-bold">@ViewBag.Title</h1>
    </div>
    <div class="col-8 offset-2 text-start">
        <form asp-action="ResetPassword" method="post">
            <div class="row g-3">

                <div class="mt-5 pt-5 pb-3"></div>

                <div class="col-6">
                    <input asp-for="Token" type="hidden" />
                    <input asp-for="Email" type="hidden" />
                    
                    <label asp-for="Password" class="form-label">Senha</label>
                    <input asp-for="Password" class="form-control" />

                    <label asp-for="ConfirmPassword" class="form-label">Confirmar Senha</label>
                    <input asp-for="ConfirmPassword" class="form-control" />

                    <div class="text-danger" asp-validation-summary="All"></div>
                    <button class="w-100 btn btn-primary btn-lg" type="submit">Redefinir</button>
                </div>

            </div>
        </form>
    </div>
</div>