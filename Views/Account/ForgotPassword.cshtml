@model ForgotPassword

@{
    ViewData["Title"] = "Recuperação de senha";
}

<div class="container">
    <div class="mt-5 px-4 pt-5 pb-3 text-center">
        <h1 class="display-6 fw-bold">@ViewBag.Title</h1>
    </div>
    <div class="col-8 offset-2 text-start">
        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row g-3">

                <div class="mt-5 pt-5 pb-3">
                    <p>Informe o e-mail cadastrado na plataforma, e receba um link para a alteração da senha.</p>
                </div>

                <div class="col-6">
                    <label asp-for="Email" class="form-label">E-mail</label>
                    <input asp-for="Email" class="form-control" id="email" placeholder="Informe seu e-mail" value="" required>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div class="invalid-feedback">
                        Por favor informe um e-mail válido.
                    </div>

                    <div class="text-danger" asp-validation-summary="All"></div>
                    <button class="w-100 btn btn-primary btn-lg" type="submit">Enviar</button>

                    <div class="main-signup-footer mg-t-10">
                        <p><a asp-controller="Account" asp-action="Login">Voltar para o login.</a></p>
                    </div>
                </div>

            </div>
        </form>      
    </div>   
</div>