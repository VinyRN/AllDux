@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alldux</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/jquery-ui/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap-datepicker3.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.0/font/bootstrap-icons.css">


    
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-PYTQJQT0EY"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-PYTQJQT0EY', {'user_id': '@User.Identity.GetUserId()'});
        gtag('set', 'user_properties', { 'plataforma_id' : 'USER_ID' });
    </script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-211693874-1"></script>
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'UA-211693874-1');
    gtag('set', {'user_id': '@User.Identity.GetUserId()'}); // Defina o ID de usuário usando o user_id conectado.
    gtag('set', 'user_properties', { 'plataforma_id' : '@User.Identity.GetUserId()' });
    </script>
</head>
<body data-bs-spy="scroll" data-bs-target="#navbar-example3" data-bs-offset="50" tabindex="0" class="bg-light">

    @{await Html.RenderPartialAsync("_LoadingPartial");}

    <header class="p-3 bg-dark text-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a class="d-flex mb-2 mb-lg-0 navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/alldux-logo-topo-branco-pq.png" class="logo-topo" border=0 alt="Alldux" />
                </a>

                <partial name="_MenuPartial" />

                <div class="dropdown text-end">
                    <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="text-white bt-outline-primary">@User.Identity.Name</span>
                    </a>
                    <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item" asp-controller="DadosPessoais" asp-action="Index">Dados pessoais</a></li>
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="PoliticaPrivacidade">Política de Privacidade</a></li>
                        <li><a class="dropdown-item" asp-controller="Home" asp-action="TermoResponsabilidade">Termo de Responsabilidade</a></li>

                        @if (this.User.IsInRole("Admin") || this.User.IsInRole("BrandAdmin"))
                        {
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Usuários</a></li>
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Trial">Usuários Trial</a></li>

                            @* @if (this.User.IsInRole("Admin")){
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-controller="Role" asp-action="Index">Grupos</a></li>
                                <li><a class="dropdown-item" asp-controller="Claims" asp-action="Index">Permissões</a></li>
                                } *@
                        }

                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" asp-controller="DadosPessoais" asp-action="Ajuda">Ajuda</a></li>
                        <li><a class="dropdown-item" asp-controller="DadosPessoais" asp-action="Contato">Contato</a></li>

                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Sair</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <div class="bt-topo" id="btTopo">
        <a href="" onclick="topFunction()" id="myBtn" title="ir para o topo" class="">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="#ff9b30" class="bi bi-arrow-up-square-fill" viewBox="0 0 16 16">
                <path d="M2 16a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2zm6.5-4.5V5.707l2.146 2.147a.5.5 0 0 0 .708-.708l-3-3a.5.5 0 0 0-.708 0l-3 3a.5.5 0 1 0 .708.708L7.5 5.707V11.5a.5.5 0 0 0 1 0z" />
            </svg>
        </a>
    </div>

    <div class="bg-white">
        <div class="container-fluid">
            <main role="main" class="pb-3" style="margin-left: -15px; margin-bottom: -30px;">
                @RenderBody()
            </main>
        </div>
    </div>

    @*<div class="bg-white">
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>*@

    @{await Html.RenderPartialAsync("_FooterPartial");}

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/masonry.pkgd.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/jquery-ui/jquery-ui.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
    <script src="~/js/jquery.widowFix.min.js"></script>
    <script src="~/js/nicEdit-latest.js"></script>
    <script src="~/js/bootstrap-datepicker.min.js"></script>
    <script src="~/js/bootstrap-datepicker.pt-BR.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @*<script src="~/js/jquery.inputmask.min.js"></script>*@

    @RenderSection("Scripts", required: false)
</body>
</html>