@model IEnumerable<Faq>

@{
    ViewData["Title"] = "Ajuda";
    var i = 1;
}

<div class="row">
    <div class="container mt-3 px-0">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item">@ViewData["Title"]</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container mb-2 text-center">
    <h1 class="display-5 fw-bold">@ViewData["Title"]</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4">
        Confira uma lista de perguntas frequentes. <br />Caso sua dúvida persista, por favor entre em <a asp-controller="DadosPessoais" asp-action="Contato">contato</a>
      </p>
    </div>
  </div>
</div>

<div class="row">

    <div class="col-8 offset-2 text-start mb-5">

        <div class="accordion" id="accordion">
            
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <div class="accordion-item">
                        @if (i == 1)
                        {
                            <h2 class="accordion-header" id="@i">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@i" aria-expanded="true" aria-controls="collapse_@i">
                                    @Html.Raw(item.Pergunta.Replace("color:#1155CC", "")) 
                                </button>
                            </h2>
                            <div id="collapse_@i" class="accordion-collapse collapse show" aria-labelledby="heading_@i" data-bs-parent="#accordion">
                                <div class="accordion-body">
                                    @Html.Raw(@item.Resposta.Replace("color:#1155CC", ""))
                                </div>
                            </div>
                        }
                        else
                        {
                            <h2 class="accordion-header" id="@i">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@i" aria-expanded="false" aria-controls="collapse_@i">
                                   @Html.Raw(item.Pergunta.Replace("color:#1155CC", "")) 
                                </button>
                            </h2>
                            <div id="collapse_@i" class="accordion-collapse collapse" aria-labelledby="heading_@i" data-bs-parent="#accordion">
                                <div class="accordion-body">
                                    @Html.Raw(@item.Resposta.Replace("color:#1155CC", ""))
                                </div>
                            </div>
                        }

                    </div><!-- @(i++) -->
                }
            }

        </div>
    </div>

</div>

