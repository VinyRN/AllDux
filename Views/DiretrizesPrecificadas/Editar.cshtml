@using System.Globalization
@model DiretrizPrecificada

@{
    ViewData["Title"] = "Diretrizes Precificadas";
    double t1 = 0;
    double t2 = 0;
}

@functions {
  public string converte(string t){
    if(!String.IsNullOrEmpty(t)){
      double temp = Convert.ToDouble(t.Replace(".", ","), new NumberFormatInfo(){NumberDecimalSeparator = ",", NumberGroupSeparator = ".", CurrencyDecimalSeparator = ","});
      return string.Format("{0:N}", temp);
    }
    return string.Format("{0:N}", 0);
  }
}

<div class="row">
  <div class="container mt-3 px-0">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Diretrizes" asp-action="Index">Diretrizes</a></li>
        <li class="breadcrumb-item active" aria-current="page">Diretrizes Precificadas</li>
      </ol>
    </nav>
  </div>

  <div class="container mb-4 px-0">
    <h1>Editar Diretriz Precificada
      @if(this.User.IsInRole("Admin")){
      <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#confirmaRemocao"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
</svg> Remover</button>
      }
    </h1>
  </div>
</div>


<form method="post">
  <div class="row">
  <div class="col-12 text-start">
    <div class="row">
      <div class="mb-3 col">
          <label>Titulo da Diretriz</label>
          <input class="form-control" value="@ViewBag.Titulo" readonly />
      </div>
      <div class="mb-3 col">
          <label>Código da Diretriz Precificada</label>
          <input class="form-control" value="@Model.Id" readonly />
      </div>
    </div>

    <div class="form-group mb-3">
        <label asp-for="GrupoProtocolo">Titulo da Diretriz</label>
        <input asp-for="GrupoProtocolo" name="GrupoProtocolo" class="form-control" value="@Model.GrupoProtocolo" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Conteudo">Texto de introdução (Curto)</label>
        <textarea asp-for="Conteudo" name="Conteudo" id="Textrea_Conteudo" style="width:100%; height:100px; display:block;"></textarea>
    </div>

    <div class="form-group mb-3">
      <div class="mt-3">
        <a class="btn btn-secondary" asp-controller="DiretrizesPrecificadas" asp-action="AdicionarTabela" asp-route-id="@Model.Id.ToString()"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-table" viewBox="0 0 16 16">
        <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2zm15 2h-4v3h4V4zm0 4h-4v3h4V8zm0 4h-4v3h3a1 1 0 0 0 1-1v-2zm-5 3v-3H6v3h4zm-5 0v-3H1v2a1 1 0 0 0 1 1h3zm-4-4h4V8H1v3zm0-4h4V4H1v3zm5-3v3h4V4H6zm4 4H6v3h4V8z"/>
        </svg> Adicionar Tabelas</a>
      </div>
      <input type="hidden" asp-for="@Model.DiretrizesClinicasId" name="DiretrizesClinicasId" />
      
      <button type="submit" class="btn btn-primary mt-3"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
  <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z"/>
</svg> Gravar Diretriz</button>
    </div>

    <div id="tabelas">
    @foreach (var tabela in Model.DiretrizPrecificadaTabela)
    {
    <div class="table-responsive" id="div_tabela_@(tabela.Index)">
    <table class="table table-hover table-diretrizes-precificadas" id="tabela_@(tabela.Index)">
      <thead>
        @if(!String.IsNullOrEmpty(tabela.Titulo)){
        <tr>
        <th class="table-destaque" colspan="10">
          <h4>@tabela.Titulo <a class="btn btn-secondary btn-sm" asp-area="" asp-controller="DiretrizesPrecificadas" asp-action="EditarTabela" asp-route-id="@tabela.Id"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
</svg> Editar Tabela</a></h4>
        </th>
        </tr>
        }else{
          <tr>
          <th class="table-destaque" colspan="10">
          <h4><a class="btn btn-secondary btn-sm" asp-area="" asp-controller="DiretrizesPrecificadas" asp-action="EditarTabela" asp-route-id="@tabela.Id"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
</svg> Editar Tabela</a></h4>
          </th>
        </tr>
        }
        <tr>
          <th colspan="10">
          <div class="form-group mb-3">
            @tabela.ChaveTabela
          </div>
          </th>
        </tr>
        @if(!String.IsNullOrEmpty(tabela.Observacoes) && tabela.Observacoes != "<br>"){
        <tr>
          <th colspan="10">
          <div class="form-group mb-3">
            @tabela.Observacoes
          </div>
          </th>
        </tr>
        }
        <tr>
          <th>Ordem</th>
          <th>Medicamento</th>
          <th>mg ou ml<br /> mg/kg ou mg/m²</th>
          <th>Dias<br /> p/ciclo</th>
          <th>SC<br /> ou Peso</th>
          <th>Dose<br /> Final</th>
          <th>Valor ml/mg Alldux</th>
          <th>Valor ciclo</th>
          <th>Ciclos</th>
          <th>Valor total ciclos</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var linha in tabela.DiretrizPrecificadaRegistro)
        {
          if(linha.Ordem == "#quebra#"){
            
          <tr class="calculos" class="bg-light">
            <td class="bg-light"></td>
            <td class="bg-light text-start" colspan="8">
              <strong>@linha.Medicamento</strong>
            </td>
            <td class="bg-light"></td>    
          </tr>

          }else{
          
          <tr>
            <td>@linha.Ordem</td>
            <td>@linha.MedicamentoPrincipioAtivo @linha.Medicamento</td>
            <td>@linha.Mgm2</td>
            <td>@linha.DiasCiclo</td>
            <td>@linha.ScPeso</td>
            <td>@linha.CalcDoseFinal()</td>
            <td>@("R$ " + converte(linha.ValorCpMgAlldux.ToString()))</td>
            <td>@("R$ " + converte(linha.CalcValorCiclo().ToString()))</td>
            <td>@linha.CicloTotal</td>
            <td>@("R$ " + converte(linha.CalcValorTotal().ToString()))</td>
          </tr>
           @if( linha.CalcValorCiclo().ToString() != null ){
            t1 += linha.CalcValorCiclo();
          }
          @if( linha.CalcValorCiclo().ToString() != null ){
            t2 += linha.CalcValorTotal();
          }
          }
        }
        <tr class="table-total">
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td>Total</td>
            <td>R$ @string.Format("{0:N}", t1)</td>
            <td></td>
            <td>R$ @string.Format("{0:N}", t2)</td>
          </tr>
      </tbody>
    </table>
    </div>

    @* Zerando os totais *@ 
    if(t1 != 0 && t2 != 0){ t1 = 0; t2 = 0; }
    @if(!String.IsNullOrEmpty(tabela.Observacoes)){
        <p>@Html.Raw(tabela.Observacoes)</p>
      }
  }

    </div>


  </div>
  </div>
</form>

<div class="modal fade" tabindex="-1" id="confirmaRemocao">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirmação de remoção</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Tem certeza que deseja remover permanentemente toda essa Diretriz Precificada e todas as suas tabelas? Essa ação não pode ser desfeita.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <a type="button" class="btn btn-danger" asp-area="" asp-controller="DiretrizesPrecificadas" asp-action="Remover" asp-route-id="@Model.Id.ToString()">Remover</a>
      </div>
    </div>
  </div>
</div>