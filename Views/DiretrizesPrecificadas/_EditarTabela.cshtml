@model DiretrizPrecificadaTabela

@{
    ViewData["Title"] = "Diretrizes Precificadas";
}

<div class="row">
  <div class="container mt-3">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Diretrizes" asp-action="Index">Diretrizes</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="DiretrizesPrecificadas" asp-action="Editar" asp-route-id="@Model.DiretrizPrecificadaId" >Diretrizes Precificadas</a></li>
        <li class="breadcrumb-item active" aria-current="page">Diretrizes Precificadas - Editar Tabela</li>
      </ol>
    </nav>
  </div>

  <div class="container mb-4">
    <h1>Precificação de Protocolos: @ViewBag.Titulo</h1>
  </div>
</div>

<form method="post">
  <div class="row">
  <div class="col-12 text-start">

    <div id="tabelas">
      
      <div class="table-responsive" id="div_tabela_@(Model.Index)">

      <table class="table table-hover align-middle table-diretrizes-precificadas drop" id="tabela_@(Model.Index)">
      <thead>
        <th colspan="10" class="table-destaque">
        <div class="form-group mb-3">
          <label name="Titulo">Titulo da Tabela <a class="btn btn-outline-danger btn-sm" asp-controller="DiretrizesPrecificadas" asp-action="ExcluirTabela" asp-route-id="@Model.Id">Excluir Tabela</a></label>
          <input name="Titulo" class="form-control" value="@Model.Titulo" maxlength="250" />
        </div>
        </th>
      </tr>
        <tr>
          <th colspan="5" class="table-destaque">
          <div class="form-group mb-3">
            <label name="Linha">Linha</label>
            <input name="Linha" class="form-control" value="@Model.Linha" maxlength="40" />
          </div>
          </th>
          <th colspan="5" class="table-destaque">
          <div class="form-group mb-3">
            <label name="Finalidade">Finalidade</label>
            <input name="Finalidade" class="form-control" value="@Model.Finalidade" maxlength="40" />
          </div>
          </th>
        </tr>
        <tr>
          <th colspan="10" class="table-destaque">
          <div class="form-group mb-3">
            <label name="Titulo">Nome do Protocolo</label>
            <input name="ChaveTabela" class="form-control" style="min-width:100px;" value="@Model.ChaveTabela" maxlength="800" />
          </div>
        </th>
        </tr>
        <tr>
          <th colspan="5" class="table-destaque">
          <div class="form-group mb-3">
            <label name="ChaveTabelaReduzida">Nome Curto</label>
            <input name="ChaveTabelaReduzida" class="form-control" style="min-width:100px;" value="@Model.ChaveTabelaReduzida" maxlength="500" />
          </div>
          </th>
          <th colspan="5" class="table-destaque">
          <div class="form-group mb-3">
            <label name="Observacoes">Observações</label>
            <input name="Observacoes" class="form-control" style="min-width:100px;" value="@Model.Observacoes" maxlength="6000" />
          </div>
        </th>
        </tr>
        <tr>
          <th>Ordem</th>
          <th>Medicamento</th>
          <th>Mg/m2 ou cp</th>
          <th>Dias por ciclo</th>
          <th>SC ou Peso</th>
          <th>Dose Final</th>
          <th>Valor cp ou mg/Alldux</th>
          <th>Valor <br/> (1 ciclo)</th>
          <th>Total ciclo</th>
          <th>Valor total <br/>(conforme ciclos)</th>
        </tr>
      </thead>
      
      <tbody>
        @foreach (var linha in Model.DiretrizPrecificadaRegistro)
        {
        <tr class="calculos">
          <input type="hidden" name="DiretrizPrecificadaRegistro[@(linha.Index)].Index" value="@(linha.Index)" />
          <td><input name="DiretrizPrecificadaRegistro[@(linha.Index)].Ordem" class="form-control" value="@(linha.Ordem)" maxlength="20" /></td>
          <td class="text-start">
            <!-- Medicamento -->
            <div style="position:relative">
            <span id="NOME_addMedicamento_@(ViewBag.Index)_@(linha.Index)" class="badge bg-secondary visible" style="margin-top: -8px; position: absolute; z-index: 10;">@linha.MedicamentoNome</span>
            <div class="input-group" id="popMedicamento" data-bs-toggle="tooltip" data-bs-placement="top" title="Associar Medicamento">
              <input type="text" name="DiretrizPrecificadaRegistro[@(linha.Index)].Medicamento" class="form-control" value="@(linha.Medicamento)" maxlength="150" />
              <button class="btn btn-secondary" type="button" id="addMedicamento_@(ViewBag.Index)_@(linha.Index)" onclick="associarMedicamento(this)" data-indice="@(ViewBag.Index)" data-registro="@(linha.Index)">+</button>
            </div>
            </div>
            <input type="hidden" id="TISS_addMedicamento_@(ViewBag.Index)_@(linha.Index)" name="DiretrizPrecificadaRegistro[@(linha.Index)].TISS" value="@(linha.TISS)" />
          </td>
          <td><input name="DiretrizPrecificadaRegistro[@(linha.Index)].Mgm2" maxlength="10" id="Mgm2_@(ViewBag.Index)_@(linha.Index)" value="@(linha.Mgm2)" class="form-control" onkeypress="return event.charCode >= 46 && event.charCode <= 57 && event.charCode != 47" /></td>
          <td><input name="DiretrizPrecificadaRegistro[@(linha.Index)].DiasCiclo" maxlength="3" id="DiasCiclo_@(ViewBag.Index)_@(linha.Index)" value="@(linha.DiasCiclo)" class="form-control" onkeypress="return event.charCode >= 46 && event.charCode <= 57 && event.charCode != 47" /></td>
          <td><input name="DiretrizPrecificadaRegistro[@(linha.Index)].ScPeso" maxlength="4" id="ScPeso_@(ViewBag.Index)_@(linha.Index)" value="@(linha.ScPeso)" data-indice="@(ViewBag.Index)" data-registro="@(linha.Index)" onfocusout="calculo1(this)" class="form-control ScPeso" onkeypress="return event.charCode >= 46 && event.charCode <= 57 && event.charCode != 47" /></td>
          <td><input name="DiretrizPrecificadaRegistro[@(linha.Index)].DoseFinal" id="DoseFinal_@(ViewBag.Index)_@(linha.Index)" value="@(linha.CalcDoseFinal())" class="form-control" onkeypress="return event.charCode >= 46 && event.charCode <= 57 && event.charCode != 47" readonly /></td>
          <td><input name="DiretrizPrecificadaRegistro[@(linha.Index)].ValorCpMgAlldux" id="ValorCpMgAlldux_@(ViewBag.Index)_@(linha.Index)" value="@(linha.ValorCpMgAlldux)" data-indice="@(ViewBag.Index)" data-registro="@(linha.Index)" class="form-control" readonly /></td>
          <td><input name="DiretrizPrecificadaRegistro[@(linha.Index)].ValorCiclo" id="ValorCiclo_@(ViewBag.Index)_@(linha.Index)" value="@(linha.CalcValorCiclo())" class="form-control" data-indice="@(ViewBag.Index)" data-registro="@(linha.Index)" onkeypress="return event.charCode >= 46 && event.charCode <= 57 && event.charCode != 47" readonly /></td>
          <td><input name="DiretrizPrecificadaRegistro[@(linha.Index)].CicloTotal" maxlength="5" id="CicloTotal_@(ViewBag.Index)_@(linha.Index)" value="@(linha.CicloTotal)" data-indice="@(ViewBag.Index)" data-registro="@(linha.Index)" onfocus="calculo2(this)"  onfocusout="calculo3(this)" class="form-control" onkeypress="return event.charCode >= 46 && event.charCode <= 57 && event.charCode != 47" /></td>
          <td><input name="DiretrizPrecificadaRegistro[@(linha.Index)].ValorTotal" id="ValorTotal_@(ViewBag.Index)_@(linha.Index)" value="@(linha.CalcValorTotal())" class="form-control" onkeypress="return event.charCode >= 46 && event.charCode <= 57 && event.charCode != 47" readonly /></td>
        </tr>
        }
      </tbody>

    </table>
    </div>

    </div> <!-- tabelas -->

    <div class="form-group">
      <button type="button" class="btn btn-secondary" id="novoRegistro_@Model.Index" onclick="AdicionaRegistro(@Model.Index)">Adicionar Registro</button>
      <button type="button" class="btn btn-outline-danger" id="novoRegistro_@Model.Index" onclick="RemoveRegistro(@Model.Index)">Remover Registro</button>
    </div>

    @* <div class="form-group my-3">
        <label asp-for="Observacoes">Observações</label>
        <textarea asp-for="Observacoes" name="Observacoes" id="Textrea_Conteudo" style="width:100%; height:100px; display:block;"></textarea>
    </div> *@

      <input type="hidden" name="Index" value="@Model.Index" />
      <input type="hidden" name="Id" value="@Model.Id" />
      <input type="hidden" name="DiretrizPrecificadaId" value="@Model.DiretrizPrecificadaId" />
      <button type="submit" class="btn btn-primary mt-3">Gravar Tabela</button>
  </div>
  </div>
</form>

<!-- Modal -->
<div class="modal fade" id="addMedicamentoModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Associar Medicamento</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        
          <table class="table table-hover align-middle" id="TabelaMedicamentosDiretrizes">
            <thead>
              <tr onclick="selecionaMedicamento()">
                <th>TISS</th>
                <th>Nome</th>
                <th>Apresentação</th>
                <th>Laboratório</th>
                <th>+</th>
              </tr>
            </thead>
            <tbody>

              @if(ViewBag.ListaMedicamentos != null){
                @foreach (var item in ViewBag.ListaMedicamentos)
                {
                  @foreach (var variacao in item.Variacoes)
                  {
                  <tr>
                    <td>@variacao.TISS</td>
                    <td>@variacao.Nome</td>
                    <td>@variacao.UnApresentacao @variacao.UnApresentacaoTipo / @variacao.UnMedida @variacao.UnMedidaTipo</td>
                    <td>@variacao.Laboratorio</td>
                    <td><button type="button" id="btSelecionaMedicamento" class="btn btn-primary" onclick="selecionaMedicamento('@variacao.TISS', '@variacao.Nome', '@variacao.PrecoAllduxMg().ToString()')">+</button></td>
                  </tr>
                  }
                }
              }
            </tbody>
          </table>

        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
        @* <button type="submit" class="btn btn-primary">Associar Medicamento</button> *@
      </div>
    </div>
  </div>
</div>

<script>
  arrayLinha = [
    @foreach (var item in ViewBag.Linha)
    {
      @Html.Raw("'"+item+"',")
    }
  ];

    arrayFinalidade = [
    @foreach (var item in ViewBag.Finalidade)
    { 
      @Html.Raw("'"+item+"',")
    }
  ];

</script>
