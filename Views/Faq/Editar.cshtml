@model Faq

@{
    ViewData["Title"] = "Editar Pergunta";
}

@functions{
  public string isChecked(bool prop){
    if(prop){
        return "checked";
    }
    return "";
  }

  public string getValue(bool prop){
    if(prop){ 
        return "true";
    }
    return "false";
  }
}
<div class="row">
  <div class="container mt-3">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-controller="Faq" asp-action="Index">Ajuda</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
      </ol>
    </nav>
  </div>

  <div class="container mb-2">
    <h1>@ViewData["Title"]</h1>
  </div>
</div>

<form method="post">    
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-10 text-start">

            <div class="row">
                <div class="col mb-3">
                    <label asp-for="Pergunta">Pergunta</label>
                    <input asp-for="Pergunta" class="form-control" />                    
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Resposta">Resposta</label>
                <textarea asp-for="Resposta" name="Resposta" id="Textrea_Lead" style="width:100%; height:100px; display:block;"></textarea>                
            </div>

            <div class="form-group mb-3">
                <input type="hidden" asp-for="CreateId" />
                <input type="hidden" asp-for="CreateDate" />
                <button type="submit" class="btn btn-primary mt-3">Salvar FAQ</button>
                <a asp-action="Excluir" asp-controller="Faq" asp-route-id="@Model.Id.ToString()" class="btn btn-outline-danger mt-3">Excluir FAQ</a>
            </div>

        </div>
    </div>
</form>